<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Create an appender for standard out using the following format:- 
		DateTime [L: LEVEL] [O: class] [T: Thread] message -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%date{yyyy-MM-dd HH:mm:ss.SSSZ} [L: %level] [O: %logger{8}][T: %thread] %msg%n%rootException
			</pattern>
		</encoder>
	</appender>


	<logger name="com.zonesoft" level="DEBUG"></logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>